<%

app_domain = ""

if (candidate = p("smoke_tests.apps_domain")) != ""
  app_domain = candidate
elsif (candidate = p("cf.domain")) != ""
  app_domain = candidate
elsif (candidate = link("cloud_controller").p("app_domains")).length != 0
  app_domain = candidate.first()
else
  app_domain = link("cloud_controller").p("system_domain")
end

%>
{
  "api":                              "<%= p('cf.api_url') %>",
  "apps_domain":                      "<%= app_domain %>",
  "admin_user":                       "<%= p('cf.admin_username') %>",
  "admin_password":                   "<%= p('cf.admin_password') %>",
  "service_name":                     "<%= p('broker.name') %>",
  "org_name":                         "<%= p('smoke_tests.org') %>",
  "plan_names":                       [ "standard" ],
  "timeout_scale":                    <%= p('smoke_tests.timeout_scale') %>,
  "skip_ssl_validation":              true,
  "create_permissive_security_group": true,
  "test_password":                    "<%= p('smoke_tests.test_password') %>"
}
