#!/bin/bash

set -ex

RABBITMQ_BROKER_DIR="$(dirname "$0")/../.."

if [[ ! -d $RABBITMQ_BROKER_DIR ]]
then
  echo "ERROR: Broker must exist locally at '$RABBITMQ_BROKER_DIR'"
  exit 1
fi

pushd "$RABBITMQ_BROKER_DIR"
  docker run --rm -v "${PWD}:/tmp/rabbitmq-broker" \
           cflondonservices/london-services-ci-rabbitmq /tmp/rabbitmq-broker/rabbitmq-broker/bin/test
popd
